{
	"name": "speedware",
	"displayName": "Speedware",
	"description": "VS Code support for the Speedware Language",
	"version": "1.3.0",
	"publisher": "davidharrisjr",
	"icon": "Assets/Speedware.PNG",
	"repository": {
		"url": "https://github.com/bblldave/SpeedwareVScodeExtension.git"
	},
	"engines": {
		"vscode": "^1.76.0"
	},
	"categories": [
		"Programming Languages"
	],
	"main": "./client/out/spwMain.js",
	"contributes": {
		"languages": [
			{
				"id": "speedware",
				"aliases": [
					"Speedware",
					"speedware"
				],
				"extensions": [
					".spw",
					".spec"
				],
				"configuration": "./client/out/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "speedware",
				"scopeName": "source.spw",
				"path": "./client/out/syntaxes/speedware.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "speedware",
				"path": "./client/out/snippets/speedware.json"
			}
		],
		"commands": [
			{
				"command": "extension.jump",
				"title": "Jump to Beginning/Ending of code block"
			}
		],
		"keybindings": [
			{
				"command": "extension.jump",
				"key": "alt+shift+\\",
				"when": "editorTextFocus"
			}
		],
		"configuration": {
			"type": "object",
			"title": "speedware",
			"properties": {
				"speedware.codeBlockKeywords": {
					"type": "object",
					"default": {
						"open": [
							"BEGIN",
							"SUBSECTION"
						],
						"close": [
							"END",
							"ENDSUB"
						]
					},
					"description": "The keywords to match. Any combination of words in open and close will trigger matches."
				},
				"speedware.style": {
					"type": "object",
					"default": {
						"borderWidth": "1px",
						"borderStyle": "none none solid none",
						"borderColor": "#3bc438",
						"color": "#3bc438"
					},
					"description": "Custom style for matching code block keywords"
				},
				"speedware.wordSeparators": {
					"type": "string",
					"default": " \n\t`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
					"description": "Characters that will be used as word separators when looking for keywords."
				},
				"speedware.hover": {
					"type": "boolean",
					"default": true,
					"description": "Whether to enable/disable speedware hover."
				},
				"speedware.goToDefintion": {
					"type": "boolean",
					"default": true,
					"description": "Whether to enable/disable speedware goToDefinition"
				},"languageServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}

			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.76.0",
		"tslint": "^5.12.1",
		"typescript": "^4.9.5"
	},
	"dependencies": {
		"@vscode/test-electron": "^2.3.0"
	}
}
